<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>



    <record id="invoice_button_manual_term" model="ir.ui.view">
            <field name="name">Account invoice (form) - Payments button</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//h1[@class='mt0']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payments" type="object"
                                class="oe_stat_button" icon="fa-list"
                                attrs="{'invisible': [('state', 'in', ['draft','cancel'])]}"
                                string="Payments">
                            </button>
                    </div>
                </xpath>
            </field>
    </record>

        <record id="invoice_manual_payment_term" model="ir.ui.view">
            <field name="name">Manual Term Conditions</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']/.." position="after">
                    <group string="Manual Payment Conditions"
                           attrs="{'invisible': [('manual_term_check', '=', False)]}">
                        <field name="manual_term_check" invisible="True"/>
                        <field name="initial_payment_type"/>
                        <field name="initial_payment_amount"/>
                        <field name="number_of_payments"/>
                    </group>
                </xpath>
            </field>
        </record>

    <record id="view_payment_term_manual_form" model="ir.ui.view">
        <field name="name">account.payment.term.manual.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="manual_term"/>
            </field>
        </field>
    </record>
    </data>
</odoo>
